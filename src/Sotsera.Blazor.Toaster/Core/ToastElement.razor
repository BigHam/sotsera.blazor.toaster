@inherits ToastElementModel
@Css
<div class="@Toast.State.ContainerClass" style="@Toast.State.AnimationStyle" 
     onmouseenter="@MouseEnter" onmouseleave="@MouseLeave" onclick="@Clicked">
    <div class="toast-message">
        @if (Toast.State.ShowProgressBar)
        {
            <div class="@Toast.State.ProgressBarClass" style="@Toast.State.ProgressBarStyle"></div>
        }
        @if (Toast.State.ShowCloseIcon)
        {
            <button type="button" class="@Toast.State.CloseIconClass" role="button" @onclick="@CloseIconClicked">×</button>
        }
        @if (Title.IsNonEmpty())
        {
            <div class="toast-title">@Title</div>
        }
        @if (Messages.Count == 1)
        {
            <div class="toast-message">@Messages[0]</div>
        }
        else
        {
            <ul>
                @foreach (var message in Messages)
                {
                    <li>@message</li>
                }
            </ul>
        }
    </div>
</div>